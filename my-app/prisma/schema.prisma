generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  jobSeeker
  employer
  admin
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id                String    @id @default(cuid()) @map("_id")
  email             String    @unique
  verifyEmail       Boolean   @default(false)
  verifyTokenExpiry DateTime?
  verifyToken       String?
  name              String
  dob               DateTime?
  gender            Gender?
  phone             String?
  utr               String?  
  password          String
  image             String?   @default("https://res.cloudinary.com/devatchannel/image/upload/v1602752402/avatar/avatar_cugq40.png")
  city              String?
  createdOrg        String?
  address           String?
  ssc               String?
  sscper            String?
  inter             String?
  interper          String?
  degree            String?
  degreeper         String?
  industryType      String?
  totalEmployee     Int?      @default(0)
  description       String?
  experience        Int?
  resume           String?
  role              Role      @default(jobSeeker)

  jobs          Jobs[]            @relation("UserJobs")
  userJobs      UserJobs[]
  applications  JobApplications[]
  jobApplicants JobApplicants[]
  createdAt     DateTime?         @default(now())
  updatedAt     DateTime?         @updatedAt
}

model UserJobs {
  id     String @id @default(cuid()) @map("_id")
  userId String
  jobId  String

  user User @relation(fields: [userId], references: [id])
  job  Jobs @relation(fields: [jobId], references: [id])
}

model Jobs {
  id             String   @id @default(cuid()) @map("_id")
  title          String
  description    String
  location       String
  salary         Int?
  employmentType String 
  category       String?
  skills         String[]  
  image          String?
  website        String?
  jobLevel       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  userId         String
  
  user          User              @relation("UserJobs", fields: [userId], references: [id])
  userJobs      UserJobs[]
  applications  JobApplications[]
  jobApplicants JobApplicants[]
}

model JobApplications {
  id        String   @id @default(cuid()) @map("_id")
  jobId     String
  userId    String
  status    String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  job  Jobs @relation(fields: [jobId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model JobApplicants {
  id        String   @id @default(cuid()) @map("_id")
  jobId     String
  userId    String
  status    String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  job  Jobs @relation(fields: [jobId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

